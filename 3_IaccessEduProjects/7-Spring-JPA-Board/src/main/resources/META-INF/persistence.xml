<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

<!--이 파일의 위치는 약속된 고정값이다!-->

    <persistence-unit name="jpalesson">
        <properties>
            <!-- 필수 속성 -->
            <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
            <property name="javax.persistence.jdbc.user" value="c##board"/>
            <property name="javax.persistence.jdbc.password" value="board"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/><!--JPA는 특정 DB에 종속되어 있지 않는다.(ex. 오라클 쓰다가 MSSQL 아니면 mySQL로 넘어가도 사용 되어야 함.) 마지막의 H2Dialect을 ORACLEDialect MYSQLDialect 등등 바꾸는 것을 말한다.-->

            <!-- 옵션 -->
            <property name="hibernate.show_sql" value="true"/><!--실행할 때 콘솔로 실행 내용 보여달라는 코드-->
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <!--value값이 create면 기존것을 다 드롭하고 새로 만든다. update로 바꾸면 수정 작업을 해준다. none은 아무것도 안한다.-->
        </properties>
    </persistence-unit>
</persistence>

